<Window x:Class="WebApiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApiClient"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="350" Width="525">
    <DockPanel>
        <Grid DockPanel.Dock="Right">
            <Button Command="{Binding InvokeSvcCmd}" Content="Invoke Svc"></Button>
        </Grid>
        <Label Name="lblStatus" DockPanel.Dock="Bottom" Height="23" Content="{Binding Status}"></Label>
    </DockPanel>
</Window>
